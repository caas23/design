{% include 'incl/header.twig' %}

<body>
    {% include 'incl/nav.twig' %}

    <div class="main" role="main">
        <div class="single-technology">
            <div class="tech-menu">
                <h2>Technologies</h2>
                {% for page in pages("technology")|reverse if not page.hidden %}               
                <div
                    {% if page.url==current_page.url %} class="tech-menu {{ page.title |lower }} tech-active"
                    {% else %} class="tech-menu {{ page.title |lower }}" {% endif %}>
                    <a href="{{ page.url }}"><h4>{{ page.title }}</h4></a>
                </div>
                {% endfor %}
            </div>
            <div class="tech-content">
                {{ content }}  
            </div>  
        </div>
    </div>
    
    {% include 'incl/footer.twig' %}
</body>

</html>
